{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals"] // permet de typer les méthodes de Vitest
  },
  "include": [
    "vite.config.ts",
    "test-setup.js", // prévient ESLint de l'existence de ce fichier
    ".eslintrc.cjs",
    "src"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}